<div class="container-fluid mt-5 contact-style" id="contactid">
    <div class="row">
        <div class="col-md-10 col-12 mx-auto">
            <h1 class="text-center main-heading">Contact Us</h1>
            <p class="text-center sub-heading">we will be happy to help you</p>
            <div class="row">
                <div class="col-md-6 col-12 mx-auto">
                    <form action="/contact" method="POST">
                    <div class="form-group">
                            <label for="exampleInputName1">Name:</label>
                            <input type="text" class="form-control" id="exampleInputName1" placeholder="Enter Your Full Name" name="name">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Email address:</label>
                            <input type="email" class="form-control" id="exampleInputEmail1"
                                aria-describedby="emailHelp" placeholder="Enter Your Email" name="email">
                            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
                                else.</small>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPhone1">Phone:</label>
                            <input type="number" class="form-control" id="exampleInputPhone1" placeholder="Phone Number" name="phone">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputMsg1">Message:</label>
                            <input type="text" class="form-control" id="exampleInputMsg1" placeholder="Write Message..." name="message">
                        </div>
                        <button type="submit" class="btn-style btn-primary">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
</div>